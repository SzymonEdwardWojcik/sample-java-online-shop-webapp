<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>questore</title>
  <link href="/static/assets/css/main.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Muli" rel="stylesheet">
</head>

<body>
  <header class="primary-header">
    <img src="/static/assets/pics/web/logo.jpg">
    <nav class="primary-nav">
      <ul>
        <li><a href="">about</a></li><!--
     --><li><a href="">contact</a></li><!--
     --><li><a class="logout-btn" href="">logout</a></li>
      </ul>
    </nav>
  </header>
  <section class="menu-bar">
    <div class="frame">
      <img src="/static/assets/pics/profiles/{{ login }}.jpg">
      <nav>
        <ul class="menu-nav">
          <li><a href="/mentor">profile</a></li>
          <li><a href="/mentor/groups">groups</a></li>
          <li><a href="/mentor/team">teams</a></li>
          <li><a href="/mentor/quest/show">quests</a></li>
          <li><a href="/mentor/artifact/show">artifacts</a></li>
        </ul>
      </nav>
    </div>
    <footer>
      <small>&copy; pyLamas</small>
    </footer>
  </section>
    
  <section class="users-table">
   <div>
    {% if (message.length > 0) %}
       <img src="/static/assets/pics/web/OK.png" alt="OK" style="height:20px;width:20px;display:inline-block" ><h4>{{ message }}</h4>
    {% endif %}
   </div>
    <h3>Class KRK.2017.1 A</h3>
    <table style="width:100%">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Surname</th>
        <th class="btn" id="add-btn"><a href="/mentor/groups/addStudent">Add new</a></th>
      </tr>
	{% for student in students %}
		<tr>
			<td> 1. </td>
			<td>{{ student.getName() }}</td>
			<td>{{ student.getSurname() }}</td>
			<td><a class="btn" id="edit-btn" href="/mentor/groups/edit/{{ student.getLogin.getValue() }}">Edit</td>
        		<td><a class="btn" id="remove-btn" href="/mentor/groups/remove/{{ student.getLogin.getValue() }}">Remove</td>
			<td><a class="btn" id="remove-btn" href="/mentor/groups/quest/{{ student.getLogin.getValue() }}">Quest</td>
		</tr>
	{% endfor %}
        
    </table>
  </section>
</body>
</html>

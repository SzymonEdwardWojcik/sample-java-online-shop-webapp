            <th>Price:</th>
            <th><input type="text" name="price" value="" required></th>
        </tr>
        <tr>
            <th>Type:</th>
            <th>
                <select name="type">
                    <option value="Single">Single</option>
                    <option value="Team">Team</option>
                </select>
            </th>
        </tr>
    </table>

    <button class="submit" type="submit">submit</button>

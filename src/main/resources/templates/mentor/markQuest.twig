<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>questore</title>
  <link href="/static/assets/css/main.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Muli" rel="stylesheet">
</head>
<body>
  <header class="primary-header">
    <img src="/static/assets/pics/web/logo.jpg">
    <nav class="primary-nav">
      <ul>
        <li><a href="">about</a></li>
     	<li><a href="">contact</a></li>
     	<li><a class="logout-btn" href="">logout</a></li>
      </ul>
    </nav>
  </header>
  <section class="menu-bar">
    <div class="frame">
      <img src="/static/assets/pics/profiles/{{ login }}.jpg">
      <nav>
        <ul class="menu-nav">
          <li><a href="/mentor">profile</a></li>
          <li><a href="/mentor/groups">groups</a></li>
          <li><a href="/mentor/team">teams</a></li>
          <li><a href="/mentor/quest">quests</a></li>
          <li><a href="/mentor/artifact">artifacts</a></li>
        </ul>
      </nav>
    </div>
    <footer>
      <small>&copy; pyLamas</small>
    </footer>
  </section>
  <section class="users-table">
    <h4>{{ message }}</h4>
    <h3>Quest</h3>
    <table style="width:100%">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Reward</th>
      </tr>
        {% set i = 0 %}
        {% for quest in questsList %}
            {% set i = i + 1 %}
            <tr>
                <td>{{ i }}</td>
                <td>{{ quest.getName() }}</td>
                <td>{{ quest.getDescription() }}</td>
                <td>{{ quest.getReward() }}</td>
                <td><a class="btn" id="edit-btn" href="/mentor/groups/quest/{{ studentLogin }}/mark/{{ quest.getName() }}">Mark</td>
            </tr>
        {% endfor %}
    </table>
  </section>
</body>
</html>

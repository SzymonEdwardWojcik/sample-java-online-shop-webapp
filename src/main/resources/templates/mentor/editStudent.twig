  <form method="POST" class="add">
    <h3>Edit student</h3>

    <table class="input-table">
      <tr>
        <th>Name:</th>
        <th><input type="text" name="name" value="{{ student.getName() }}"></th>
      </tr>
      <tr>
        <th>Surname:</th>
        <th><input type="text" name="surname" value="{{ student.getSurname() }}"></th>
      </tr>
      <tr>
        <th>Email:</th>
        <th><input type="email" name="email" value="{{ student.getEmail() }}"></th>
      </tr>
      <tr>
        <th>Group:</th>
        <th><input type="text" name="group" value="{{ student.getGroup.getName() }}"></th>
      </tr>
      <!-- optional only in student creation -->

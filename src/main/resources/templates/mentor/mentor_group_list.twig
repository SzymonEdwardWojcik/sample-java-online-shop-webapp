<section class="users-table">
   <div>
    {% if (message.length > 0) %}
       <img src="/static/assets/pics/web/OK.png" alt="OK" style="height:20px;width:20px;display:inline-block" ><h4>{{ message }}</h4>
    {% endif %}
   </div>
    <h3>Class KRK.2017.1 A</h3>
    <table style="width:100%">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Surname</th>
        <th class="btn" id="add-btn"><a href="/mentor/groups/addStudent">Add new</a></th>
      </tr>
	{% for student in students %}
		<tr>
          <td> 1. </td>
          <td>{{ student.getName() }}</td>
          <td>{{ student.getSurname() }}</td>
          <td><a class="btn" id="edit-btn" href="/mentor/groups/edit/{{ student.getLogin.getValue() }}">Edit</a></td>
          <td><a class="btn" id="remove-btn" href="/mentor/groups/remove/{{ student.getLogin.getValue() }}">Remove</a></td>
          <td><a class="btn" id="remove-btn" href="/mentor/groups/quest/{{ student.getLogin.getValue() }}">Quest</a></td>
		</tr>
	{% endfor %}
        
    </table>
</section>

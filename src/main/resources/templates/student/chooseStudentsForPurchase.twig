<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>questore</title>
    <link href="/static/assets/css/main.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Muli" rel="stylesheet">
</head>

<body>

<header class="primary-header">
    <img src="/static/assets/pics/web/logo.jpg">
    <nav class="primary-nav">
        <ul>
            <li><a href="https://codecool.pl/" target="_blank">about</a></li>
            <li><a href="">contact</a></li>
            <li><a class="logout-btn" href="">logout</a></li>
        </ul>
    </nav>
</header>

<section class="menu-bar">
    <div class="frame">
        <img src="/static/assets/pics/profiles/student1.jpg">
        <nav>
            <ul class="menu-nav">
                <li><a href="/student">profile</a></li>
                <li><a href="/student/wallet">wallet</a></li>
                <li><a href="/student/store">store</a></li>
                <li><a href="/student/team_purchases">team purchases</a></li>
            </ul>
        </nav>
    </div>

    <footer>
        <small>&copy; pyLamas</small>
    </footer>
</section>
<form method="POST" class="users-table">
    {% if errmsg.length > 0 %}
    <div class="fail">
        <h5>{{ errmsg }}!</h5>
    </div>
    {% endif %}
    <h3>Choose students to buy {{ artifact.getName() }}</h3>

    <table style="width:100%">
        <tr>
            <th>Student</th>
            <th>Price per student</th>
        </tr>
        <tr>
            <td>
                <select name="student">
                    {% for student in students %}
                    <option value="{{ student.getLogin() as student1 }}">{{ student.getName() }}{{ student.getSurname() }}</option>
                    {% endfor %}
                </select>
            </td>
            <td>{{ artifact.getPrice() // 3 }}</td>
        </tr>
        <tr>
            <td>
                <select name="student">
                    {% for student in students %}
                    <option value="{{ student.getLogin() as student2 }}">{{ student.getName() }}{{ student.getSurname() }}</option>
                    {% endfor %}
                </select>
            </td>
            <td>{{ artifact.getPrice() // 3 }}</td>
        </tr>
        <tr>
            <td>
                <select name="student">
                    {% for student in students %}
                    <option value="{{ student.getLogin() as student3 }}">{{ student.getName() }}{{ student.getSurname() }}</option>
                    {% endfor %}
                </select>
            </td>
            <td>{{ artifact.getPrice() // 3 }}</td>
        </tr>
        <tr>
            <th class="btn" id="add-btn"><a href="/student/team_purchase/add/{{ artifact.getName() }}/{{ url_encode(student1+' '+student2+' '+student3) }}">Finish</a></th>
            <th class="btn" id="remove-btn"><a href="/student/store">Cancel</a></th>
        </tr>
    </table>
</form>
</body>
</html>